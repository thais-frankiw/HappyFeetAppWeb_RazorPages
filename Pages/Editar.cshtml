@page
@model HappyFeetAppWeb.Pages.EditarModel

<div class="row pt-5">
    <div class="col-md-4">
        <form method="post">
            <h4>Alteração de Produtos</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Produto.ProdutoId"/>

            <div class="form-group">
                <label asp-for="Produto.ProdutoTitulo" class="control-label"></label>
                <input asp-for="Produto.ProdutoTitulo" class="form-control" />
                <span asp-validation-for="Produto.ProdutoTitulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Produto.ProdutoDescricao" class="control-label"></label>
                <input asp-for="Produto.ProdutoDescricao" class=" form-control" />
                <span asp-validation-for="Produto.ProdutoDescricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Produto.ImagemUri" class="control-label"></label>
                <input asp-for="Produto.ImagemUri" class=" form-control" />
                <span asp-validation-for="Produto.ImagemUri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Produto.Preco" class="control-label"></label>
                <input asp-for="Produto.Preco" class=" form-control" />
                <span asp-validation-for="Produto.Preco" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 mb-3">
                <input class="form-check-input" asp-for="Produto.ProdutoEmEstoque" />
                <label asp-for="Produto.ProdutoEmEstoque"></label>
            </div>

            <div class="form-group">
                <label asp-for="Produto.TamanhosDisponiveis" class="control-label"></label>
                <input asp-for="Produto.TamanhosDisponiveis" class=" form-control" />
                <span asp-validation-for="Produto.TamanhosDisponiveis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Produto.DataDeEnvio" class="control-label"></label>
                <input asp-for="Produto.DataDeEnvio" class="form-control" type="date" />
                <span asp-validation-for="Produto.DataDeEnvio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Produto.CategoriaId" class="control-label"></label>
                <select class="form-select" asp-for="Produto.CategoriaId"
                        asp-items="Model.CategoriaOpcaoItens">
                    <option value="">Selecione uma opção</option>
                </select>
                <span asp-validation-for="Produto.CategoriaId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <input type="submit" value="Excluir" class="btn btn-danger" 
                asp-page-handler="Exclusao"/>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
